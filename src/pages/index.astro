---
import HomeLayout from "/src/layouts/HomeLayout.astro";

import Email from "/src/components/Email.astro";
import Link from "/src/components/Link.astro";

interface Project {
    title: string;
    description: string;
    links: { text: string; href: string }[];
}

const projects: Project[] = [
    {
        title: "Accelerate",
        description:
            "A powerful, customizable Safari extension for controlling video playback.",
        links: [
            { text: "Website", href: "/projects/accelerate" },
            {
                text: "App Store",
                href: "https://apps.apple.com/app/accelerate-for-safari/id1459809092",
            },
            {
                text: "GitHub",
                href: "https://github.com/ritamsarmah/accelerate",
            },
        ],
    },
    {
        title: "Geno",
        description:
            "Developer tool for adding multimodal interfaces into existing web apps. Accepted at UIST 2020.",
        links: [
            { text: "Paper", href: "https://arxiv.org/pdf/2007.09809.pdf" },
            { text: "GitHub", href: "https://github.com/ritamsarmah/geno" },
        ],
    },
];
---

<HomeLayout title="Ritam Sarmah">
    <main
        class="flex-grow flex flex-col gap-14 w-full max-w-3xl px-8 mx-auto my-20 tracking-wide"
    >
        <section class="flex flex-col gap-5">
            <h1 class="text-3xl font-semibold">Hello! I'm Ritam.</h1>
            <p>
                I am a software engineer from California, currently working at
                <Link text="AppLovin" href="https://www.applovin.com/" />. In my
                spare time, I enjoy building useful apps for iOS and macOS. I
                graduated from UCLA, where I studied computer science and
                pursued research in
                <Link
                    text="human-computer interaction"
                    href="https://hci.ucla.edu/"
                />.
            </p>
            <p>
                Feel free to reach out if you have any questions or just
                want to say hello.
            </p>

            <div class="flex gap-5">
                <Email>
                    <Link text="Email" href="javascript:mail();" />
                </Email>
                <Link text="GitHub" href="https://github.com/ritamsarmah" />
                <Link
                    text="LinkedIn"
                    href="https://www.linkedin.com/in/rsarmah/"
                />
            </div>
        </section>

        <section class="flex flex-col gap-6">
            <h2 class="text-2xl font-bold">Projects</h2>
            {
                projects.map(project => (
                    <div class="flex flex-col gap-2">
                        <h3 class="text-xl font-semibold">{project.title}</h3>
                        <p>{project.description}</p>
                        <div class="flex gap-5">
                            {project.links.map(link => (
                                <Link {...link} />
                            ))}
                        </div>
                    </div>
                ))
            }
        </section>
    </main>
</HomeLayout>
